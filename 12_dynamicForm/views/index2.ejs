<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>12_dynamicForm</title>
    <!-- jquery cdn -->
    <script
      src="https://code.jquery.com/jquery-3.7.0.min.js"
      integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g="
      crossorigin="anonymous"
    ></script>
    <!-- axios cdn -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  </head>
  <body>
    <h1>12_dynamicForm</h1>
    <!-- method, action 안 씀 -->
    <form name="register">
      <label for="name"> 이름 </label>
      <input type="text" name="name" id="name" value="봉미선" />
      <br />

      성별
      <input type="radio" name="gender" value="F" id="F" checked />여자
      <input type="radio" name="gender" value="M" id="M" />남자
      <br />
      <!-- submit type으로 하면 안 됨 -->
      <button type="button" onclick="ajaxGet()">Ajax Get</button>
      <button type="button" onclick="ajaxPost()">Ajax Post</button>
      <button type="button" onclick="axiosGet()">Axios Get</button>
      <button type="button" onclick="axiosPost()">Axios Post</button>
      <button type="button" onclick="fetchGet()">Fetch Get</button>
      <button type="button" onclick="fetchPost()">Fetch Post</button>
    </form>
    <h1>동적 전송 결과 보여줄 곳</h1>
    <div class="result"></div>

    <script>
      //변수 선언 및 할당
      const result = document.querySelector(".result");
      const form = document.forms["register"];
      const data = {
        name: form.name.value,
        gender: form.gender.value,
      };
      const { name, gender } = data; // 객체 구조분해 할당

      function ajaxGet() {
        $.ajax({
          type: "get",
          url: "/ajax",
          data: data,
          success: function (data) {
            console.log("여기는 프론트엔드: ", data);
            result.innerText = `GET /ajax 요청 완료! ${name}님은 ${gender}입니다.`;
          },
        });
      }
      function ajaxPost() {
        $.ajax({
          type: "post",
          url: "/ajax",
          data: data,
          success: function (data) {
            console.log("여기는 프론트엔드: ", data);
            result.innerText = `POST /ajax 요청 완료! ${name}님은 ${gender}입니다.`;
          },
        });
      }

      //2. Axios
      //Promise 객체 반환
      async function axiosGet() {
        try {
          const response = await axios({
            method: "get",
            url: "/axios",
            params: data,
          });
          result.innerText = `GET /axios 요청 완료! ${name}님은 ${gender}이시죠?`;
        } catch (err) {
          console.log(err);
        }
      }
      async function axiosPost() {
        try {
          const response = await axios({
            method: "post",
            url: "/axios",
            data: data,
          });
          result.innerText = `POST /axios 요청 완료! ${name}님은 ${gender}이시죠?`;
        } catch (err) {
          console.log(err);
        }
      }

      //3. fetch
      function fetchGet() {
        fetch(`/fetch?name=${name}&gender=${gender}`)
          .then(function (response) {
            console.log(response);
            return response.json(); //역직렬화
          })
          .then(function (response2) {
            console.log(response2);
            result.innerText = `GET /fetch 요청 완료! ${name}님은 ${gender}이시죠?`;
          });
      }

      function fetchPost() {
        fetch("/fetch", {
          method: "post",
          header: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(data),
        })
          .then((response) => {
            return response.json();
          })
          .then(function () {
            result.innerText = `POST /fetch 요청 완료! ${data.name}님은 ${data.gender}이시죠?`;
          });
      }
    </script>
  </body>
</html>
